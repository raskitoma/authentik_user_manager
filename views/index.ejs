<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentik - User Manager</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="lib/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css">
</head>
<body>
    <div id="wrapper">
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-dark bg-black bg-gradient shadow mb-1 sticky-top shadow">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#" id="homecam">
                            <i class="bi bi-key-fill pe-3"></i>Authentik User Management
                        </a>
                    </div>
                </nav>

                <!-- Main Content -->
                <div class="container-fluid mb-2 mt-4">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-tab-pane" type="button" role="tab" aria-controls="pending-tab-pane" aria-selected="true">
                                <i class="bi bi-exclamation-circle-fill text-warning"></i>&nbsp;Pending
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved-tab-pane" type="button" role="tab" aria-controls="approved-tab-pane" aria-selected="false">
                                <i class="bi bi-check-circle-fill text-success"></i>&nbsp;Approved
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="blocked-tab" data-bs-toggle="tab" data-bs-target="#blocked-tab-pane" type="button" role="tab" aria-controls="blocked-tab-pane" aria-selected="false">
                                <i class="bi bi-x-circle-fill text-danger"></i>&nbsp;Blocked
                            </button>
                        </li>
                      </ul>
                      <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="pending-tab-pane" role="tabpanel" aria-labelledby="pending-tab" tabindex="0">
                            <!-- Pending Data -->
                            <table id="pending_tbl" class="table table-stripped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th>eMail</th>
                                        <th>Last Login</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="approved-tab-pane" role="tabpanel" aria-labelledby="approved-tab" tabindex="0">
                            <!-- Approved Data -->
                            <table id="approved_tbl" class="table table-stripped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th>eMail</th>
                                        <th>Last Login</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="blocked-tab-pane" role="tabpanel" aria-labelledby="blocked-tab" tabindex="0">
                            <!-- Blocked Data -->
                            <table id="blocked_tbl" class="table table-stripped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Name</th>
                                        <th>eMail</th>
                                        <th>Last Login</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                      </div>
                </div>
            </div>  
        </div>

    </div>

    <!-- Toaster base -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3"> 
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
            <div class="toast-header">
                <i class="bi bi-bell-fill"></i>
                <strong class="me-auto">&nbsp;System Notification</strong>
                <small class="text-muted"></small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-white fw-bold">
            </div>
        </div>
    </div>


    <!-- Footer -->
    <footer class="bg-secondary pt-0 fixed-bottom d-sm-none d-md-block small">
        <div class="container">
            <div class="text-center copyright muted text-white"><span>Copyright Â© 2022, 2023 - <a href="https://raskitoma.com" class="text-white">Raskitoma.com</a></span></div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/axios/dist/axios.min.js"></script>
    <script src="lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="assets/js/toaster.js"></script>
    <script src="assets/js/atk-action.js"></script>
</body>
</html>